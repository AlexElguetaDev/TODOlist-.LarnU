<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Edit Password</h3>
        </div>
        <div class="card-body">
          <form method="post">
            <div class="form-group">
              <input type="text" value="{{user.fullname}}" name="fullname" placeholder="Full Name" class="form-control" autofocus disabled>
            </div>
            <div class="form-group">
              <input type="text"  value="{{user.username}}" name="username" placeholder="Username" class="form-control" disabled>
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Confirm
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>